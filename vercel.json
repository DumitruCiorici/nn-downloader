{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "*.html",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/convert",
            "dest": "server.js"
        },
        {
            "src": "/download",
            "dest": "server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/"
        }
    ]
} 